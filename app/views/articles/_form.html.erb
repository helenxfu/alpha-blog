<%= render "shared/errors", obj: @article %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@article, html: {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group row">
        <div class="control-label col-md-2">
          <%= f.label :title %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :title, class: 'form-control', placeholder: "article title", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="control-label col-md-2">
          <%= f.label :description %>
        </div>
        <div class="col-md-6">
          <%= f.text_area :description, rows: 5, class: 'form-control', placeholder: "body" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <% cb.label(class: "checkbox_inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <%end%>
      </div>
      <%= f.submit class: 'btn btn-primary btn-large' %>
    <% end %>
  </div>
</div>
<%= link_to "Back to article listing", articles_path %>
